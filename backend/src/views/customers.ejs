<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Customers</h1>
        <div class="mb-3">
            <a href="/customers/create" class="btn btn-success">Create</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th>Balance</th>
                    <th>Credit Limit</th>
                    <th>Total Sales</th>
                    <th>Costs</th>
                    <th>Address</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Contact Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (customers && customers.length > 0) { %>
                    <% customers.forEach(customer => { %>
                        <tr>
                            <td><a href="/customers/card/<%= customer.no %>"><%= customer.no %></a></td>
                            <td><%= customer.name %></td>
                            <td><%= customer.balance.toFixed(2) %></td>
                            <td><%= customer.creditLimit.toFixed(2) %></td>
                            <td><%= customer.totalSales.toFixed(2) %></td>
                            <td><%= customer.costs.toFixed(2) %></td>
                            <td><%= customer.address %></td>
                            <td><%= customer.country %></td>
                            <td><%= customer.city %></td>
                            <td><%= customer.phone %></td>
                            <td><%= customer.email %></td>
                            <td><%= customer.contactName %></td>
                            <td>
                                <a href="/customers/update/<%= customer.no %>" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/customers/delete/<%= customer.no %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="13" class="text-center">No customers found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
