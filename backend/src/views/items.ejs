<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Items</h1>
        <div class="mb-3">
            <a href="/items/create" class="btn btn-success">Create</a>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Item No</th>
                    <th>Item Type</th>
                    <th>Description</th>
                    <th>Item Category Code</th>
                    <th>Size</th>
                    <th>Weight</th>
                    <th>Quantity</th>
                    <th>Unit Cost</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (items && items.length > 0) { %>
                    <% items.forEach(item => { %>
                        <tr>
                            <td><a href="/items/card/<%= item.item_no %>"><%= item.item_no %></a></td>
                            <td><%= item.item_type %></td>
                            <td><%= item.description %></td>
                            <td><%= item.item_category_code %></td>
                            <td><%= item.size %></td>
                            <td><%= item.weight.toFixed(2) %> kg</td>
                            <td><%= item.quantity %></td>
                            <td>$<%= item.unit_cost.toFixed(2) %></td>
                            <td>$<%= item.price.toFixed(2) %></td>
                            <td>
                                <a href="/items/update/<%= item.item_no %>" class="btn btn-primary btn-sm">Edit</a>
                                <form action="/items/delete/<%= item.item_no %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="10" class="text-center">No items found.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
